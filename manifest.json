{
  "manifest_version": 2,

  "name": "Form Lock",
  "description": "Fill out and submit web forms in private.",
  "version": "0.1",

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "webNavigation", 
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
    
  "background": { "scripts": ["background.js"] },
    
  "browser_action": {
    "default_popup": "popup.html"
  }
}